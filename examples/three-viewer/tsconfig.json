{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "outDir": "./dist",
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2019", "dom"],
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "removeComments": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "pretty": true,
    "noImplicitThis": false
  },
  "include": ["src/**/*.[ts|tsx|json]"],
  "exclude": ["**/*node_modules", "dist", "**/*.test.ts"],
  "references": [
    { "path": "../../packages/core" },
    { "path": "../../packages/flow" }
  ]
}
