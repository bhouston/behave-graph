{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "removeComments": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false
  },
  "include": ["src/**/*.[ts|tsx|json]"],
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/flow" },
    { "path": "./examples/exec-graph" },
    { "path": "./examples/export-node-spec" },
    { "path": "./examples/graph-editor" },
    { "path": "./examples/three-viewer" }
  ]
}
