{
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
  },
  "exclude": ["node_modules", "**/*node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
