{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "baseUrl": "./",
    "jsx": "react",
    "outDir": "./dist"
  },
  "include": ["packages/core/src", "packages/flow/src", "packages/scene/src"],
  "exclude": ["**/*node_modules", "dist", "**/*.test.ts"],
}
